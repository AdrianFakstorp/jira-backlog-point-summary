{
    "manifest_version": 3,
    "name": "Jira Sprint Dev Type Summary",
    "version": "1.0",
    "description": "Shows development type point summaries (FE, BE, Fullstack) on Jira sprint boards",
    "permissions": ["activeTab"],
    "host_permissions": ["*://pitchtech.atlassian.net/*"],
    "content_scripts": [
      {
        "matches": ["*://pitchtech.atlassian.net/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }